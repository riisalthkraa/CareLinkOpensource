{
  "name": "carelink",
  "version": "2.5.0",
  "description": "Gestion Connectée de la Santé Familiale",
  "main": "./dist/main.js",
  "scripts": {
    "compile:electron": "tsc electron/main.ts electron/preload.ts --outDir dist --module commonjs --esModuleInterop --target es2020 --moduleResolution node --skipLibCheck",
    "kill-ports": "npx kill-port 5173 || echo Port deja libre",
    "prestart": "npm run kill-ports",
    "start": "npm run compile:electron && concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "vite",
    "start:electron": "wait-on http://localhost:5173 && electron dist/main.js",
    "build": "npm run compile:electron && vite build",
    "build:python": "cd services/ia-health && python build.py",
    "build:full": "npm run build:python && npm run build && electron-builder",
    "build:electron": "npm run build && electron-builder",
    "dev": "npm run start",
    "clean": "rimraf dist",
    "seed": "node scripts/seed-database.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:html": "jest --coverage && echo Tests report generated in test-web-published/index.html",
    "docs": "typedoc",
    "docs:serve": "npm run docs && npx serve test-web-published/docs"
  },
  "keywords": [
    "santé",
    "famille",
    "desktop",
    "electron"
  ],
  "author": "VIEY David",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "kill-port": "^2.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@types/archiver": "^7.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/qrcode": "^1.5.6",
    "@types/unzipper": "^0.10.11",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "date-fns": "^3.0.6",
    "electron-store": "^8.1.0",
    "libphonenumber-js": "^1.10.51",
    "node-cron": "^3.0.3",
    "node-notifier": "^10.0.1",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "recharts": "^2.10.3",
    "sharp": "^0.33.1",
    "sql.js": "^1.10.3",
    "tesseract.js": "^6.0.1",
    "unzipper": "^0.12.3",
    "validator": "^13.11.0"
  },
  "build": {
    "appId": "com.carelink.app",
    "productName": "CareLink",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "services/ia-health/dist/main.exe",
        "to": "python-backend/main.exe",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.healthcare-fitness",
      "extraResources": [
        {
          "from": "services/ia-health/dist/main",
          "to": "python-backend/main"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "extraResources": [
        {
          "from": "services/ia-health/dist/main",
          "to": "python-backend/main"
        }
      ]
    }
  }
}
